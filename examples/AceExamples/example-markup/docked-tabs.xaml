<Page xmlns:ace="using:run.ace" ace:Frame.Title="Native Page">
    <!-- A tab bar -->
    <Page.BottomAppBar>
        <ace:TabBar>
            <AppBarButton Label="Docked" 
                          ace:On.Click="onTabClick(this, 0)" />
            <AppBarButton Label="Overlay" 
                          ace:On.Click="onTabClick(this, 1)" />
            <AppBarButton Label="Fullscreen" 
                          ace:On.Click="onTabClick(this, 2)" />
            <AppBarButton Label="More" 
                          ace:On.Click="onTabClick(this, 3)" />
        </ace:TabBar>
    </Page.BottomAppBar>
</Page>
